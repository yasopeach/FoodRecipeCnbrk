@model FoodRecipe.Entity.Food

<form asp-controller="Food" asp-action="UpdateFood" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Food Name</label>
                <input type="text" class="form-control" asp-for="FoodName" />
            </div>

            <div class="form-group">
                <label>Food Description</label>
                <input type="text" class="form-control" asp-for="FoodDescription" />
            </div>

            <div class="form-group">
                <label>Ingredients</label>
                <input type="text" class="form-control" asp-for="Ingredients" />
            </div>

            <div class="form-group">
                <label>Kategori</label>
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.cv, new {@class = "form-control"})
            </div>
            <input type="hidden" name="FoodId" value="@Model.Id" />
            <button class="btn btn-success" type="submit">Update Food</button>
        </div>
    </div>
</form>