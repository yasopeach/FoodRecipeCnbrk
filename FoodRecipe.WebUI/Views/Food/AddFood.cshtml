@model FoodRecipe.Entity.Food

<form asp-controller="Food" asp-action="AddFood" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Food Name:</label>
                <input type="text" class="form-control" name="FoodName" />
            </div>
            <div class="form-group">
                <label>Food Description</label>
                <input type="text" class="form-control" name="FoodDescription" />
            </div>

            <div class="form-group">
                <label>Ingredients</label>
                <input type="text" class="form-control" name="Ingredients" />
            </div>


            <div class="form-group">
                <label>Kategori</label>
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.cv, new {@class = "form-control"})
            </div>

            <button class="btn btn-primary" type="submit">Create Food</button>
        </div>
    </div>
</form>