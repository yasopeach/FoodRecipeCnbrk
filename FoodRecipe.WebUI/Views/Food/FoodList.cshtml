@model List<FoodRecipe.Entity.Food>




<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Foods List</h2>
        </div>
    </div>
    <br />

    <a asp-action="AddFood" asp-controller="Food" class="btn btn-primary btn-sm mb-2">Add Food</a>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr class="align-middle text-primary">
                <th>#</th>
                <th>Food Name</th>
                <th>Food Description</th>
                <th>Ingredients</th>
                <th>Category</th>
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="3%">@item.Id</td>
                    <td width="3%">@item.FoodName</td>
                    <td width="59%">@item.FoodDescription</td>
                    <td width="20%">@item.Ingredients</td>
                    <td width="5">@item.Category.CategoryName</td>
                    <td width="5%"><a asp-action="UpdateFood" asp-route-id="@item.Id" asp-controller="Food" class="btn btn-outline-primary mx-3">Update Food</a></td>
                    <td width="5%"><a asp-action="DeleteFood" asp-route-id="@item.Id" asp-controller="Food" class="btn btn-outline-danger mx-3">Delete Food</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
